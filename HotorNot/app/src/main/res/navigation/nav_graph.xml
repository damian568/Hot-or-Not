<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/spashScreenFragment">

    <fragment
        android:id="@+id/spashScreenFragment"
        android:name="com.example.hotornot.fragments.SplashScreenFragment"
        android:label="">
        <action
            android:id="@+id/action_spashScreenFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment" />
        <action
            android:id="@+id/action_spashScreenFragment_to_registrationScreenFragment"
            app:destination="@id/registrationScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainScreenFragment"
        android:name="com.example.hotornot.fragments.MainScreenFragment"
        android:label="Home" >
        <action
            android:id="@+id/action_mainScreenFragment_to_profileScreenFragment"
            app:destination="@id/profileScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationScreenFragment"
        android:name="com.example.hotornot.fragments.RegistrationScreenFragment"
        android:label="Create Account" >
        <action
            android:id="@+id/action_registrationScreenFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileScreenFragment"
        android:name="com.example.hotornot.fragments.ProfileScreenFragment"
        android:label="Profile" >
        <action
            android:id="@+id/action_profileScreenFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment" />
    </fragment>
</navigation>